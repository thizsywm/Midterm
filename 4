class BankAccount:
    def __init__(self):
        self .__balance = 0

    def deposit(self, amount):
        if amount >0:
            self .__balance += amount
            print (f'ฝากสำเร็จ: {amount} บาท')
        else: 
            print ('ยอดเงินฝากต้องมากกว่า 0')

    def withdraw (self, amount):
        if amount > 0 amount <= self .__balance
            self.__balance -= amount
            print (f'ถอนเงินสำเร็จ {amount} บาท')
        else
            print (f'ถอนเงินไม่สำเร็จ (ยอดเงินไม่เพียงพอต่อการถอน {amount} บาท)')

    def check_balamce(self)
        return self.__balance